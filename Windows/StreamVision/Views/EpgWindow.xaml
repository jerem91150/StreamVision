<Window x:Class="StreamVision.Views.EpgWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Guide des Programmes (EPG)"
        Height="700" Width="1200"
        WindowStartupLocation="CenterOwner"
        Background="#1A1A2E">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Guide des Programmes"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="White"/>
                <TextBlock Text="Consultez les programmes TV"
                           FontSize="14"
                           Foreground="#888"
                           Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Date Selector -->
            <StackPanel HorizontalAlignment="Right"
                        Orientation="Horizontal"
                        VerticalAlignment="Center">
                <Button Content="◀" Width="35" Height="35"
                        Background="Transparent" Foreground="White"
                        BorderThickness="0" Cursor="Hand"
                        Click="PreviousDay_Click"/>
                <TextBlock x:Name="DateLabel"
                           Text="Aujourd'hui"
                           FontSize="16"
                           Foreground="#00D4FF"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           Margin="15,0"/>
                <Button Content="▶" Width="35" Height="35"
                        Background="Transparent" Foreground="White"
                        BorderThickness="0" Cursor="Hand"
                        Click="NextDay_Click"/>
            </StackPanel>
        </Grid>

        <!-- Time Header -->
        <Border Grid.Row="1"
                Background="#16213E"
                CornerRadius="8,8,0,0"
                Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Chaîne"
                           FontWeight="SemiBold"
                           Foreground="White"/>

                <ItemsControl Grid.Column="1"
                              x:Name="TimeHeaders">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </Grid>
        </Border>

        <!-- EPG Grid -->
        <ScrollViewer Grid.Row="2"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto"
                      Background="#0F1729">
            <ItemsControl x:Name="EpgGrid"/>
        </ScrollViewer>
    </Grid>
</Window>
