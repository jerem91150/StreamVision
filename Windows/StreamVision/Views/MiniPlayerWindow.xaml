<Window x:Class="StreamVision.Views.MiniPlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        Title="StreamVision - Mini Player"
        Width="400" Height="250"
        MinWidth="300" MinHeight="180"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="CanResizeWithGrip"
        ShowInTaskbar="True"
        MouseEnter="Window_MouseEnter"
        MouseLeave="Window_MouseLeave"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Border Background="#FF000000" CornerRadius="8" BorderBrush="#40FFFFFF" BorderThickness="1">
        <Grid>
            <!-- Video View -->
            <vlc:VideoView x:Name="MiniVideoView" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>

            <!-- Controls Overlay (shown on hover) -->
            <Border x:Name="ControlsOverlay" Background="#80000000" Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Top Bar - Title + Close -->
                    <Border Grid.Row="0" Background="#60000000" Padding="8,4">
                        <Grid>
                            <TextBlock x:Name="TitleText" Text="StreamVision" Foreground="White"
                                       FontSize="11" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button x:Name="ExpandBtn" Click="Expand_Click" ToolTip="Agrandir"
                                        Width="24" Height="24" Background="Transparent" BorderThickness="0" Cursor="Hand">
                                    <TextBlock Text="â›¶" Foreground="White" FontSize="12"/>
                                </Button>
                                <Button x:Name="CloseBtn" Click="Close_Click" ToolTip="Fermer"
                                        Width="24" Height="24" Background="Transparent" BorderThickness="0" Cursor="Hand">
                                    <TextBlock Text="âœ•" Foreground="#FF6666" FontSize="12"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Center Play/Pause -->
                    <Button Grid.Row="1" x:Name="PlayPauseBtn" Click="PlayPause_Click"
                            Width="50" Height="50" Background="#60000000"
                            BorderThickness="0" Cursor="Hand" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="25">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <TextBlock x:Name="PlayPauseIcon" Text="â–¶" Foreground="White" FontSize="20"/>
                    </Button>

                    <!-- Bottom Bar - Volume + Progress -->
                    <Border Grid.Row="2" Background="#60000000" Padding="8,4">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Volume -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <Button Click="Mute_Click" Background="Transparent" BorderThickness="0" Cursor="Hand"
                                        Width="24" Height="24">
                                    <TextBlock x:Name="VolumeIcon" Text="ðŸ”Š" FontSize="12"/>
                                </Button>
                                <Slider x:Name="VolumeSlider" Width="60" Minimum="0" Maximum="100"
                                        Value="100" VerticalAlignment="Center" Margin="4,0,0,0"
                                        ValueChanged="VolumeSlider_ValueChanged"/>
                            </StackPanel>

                            <!-- Time -->
                            <TextBlock Grid.Column="2" x:Name="TimeText" Text="00:00"
                                       Foreground="#AAA" FontSize="10" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Resize Grip -->
            <Path Data="M0,8 L8,0 M4,8 L8,4 M8,8 L8,8"
                  Stroke="#666" StrokeThickness="1"
                  HorizontalAlignment="Right" VerticalAlignment="Bottom"
                  Margin="0,0,4,4"/>
        </Grid>
    </Border>
</Window>
