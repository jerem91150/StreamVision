<Window x:Class="StreamVision.Views.PinDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ContrÃ´le Parental"
        Height="280" Width="350"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#1A1A2E"
        AllowsTransparency="True"
        Topmost="True">

    <Border CornerRadius="12" BorderBrush="#333" BorderThickness="1" Background="#1A1A2E">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#252542" CornerRadius="12,12,0,0" Padding="20,16">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ”’" FontSize="20" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <StackPanel>
                            <TextBlock x:Name="TitleText" Text="Entrez votre code PIN" FontSize="16" FontWeight="Bold" Foreground="White"/>
                            <TextBlock x:Name="SubtitleText" Text="Contenu protÃ©gÃ© par le contrÃ´le parental" FontSize="12" Foreground="#888"/>
                        </StackPanel>
                    </StackPanel>
                    <Button Content="âœ•" HorizontalAlignment="Right" VerticalAlignment="Top"
                            Background="Transparent" Foreground="#666" FontSize="14"
                            BorderThickness="0" Cursor="Hand" Click="Cancel_Click" Width="30" Height="30"/>
                </Grid>
            </Border>

            <!-- PIN Input -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Border Width="50" Height="60" Background="#252542" CornerRadius="8" Margin="4">
                        <TextBlock x:Name="Pin1" Text="" FontSize="28" FontWeight="Bold" Foreground="White"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <Border Width="50" Height="60" Background="#252542" CornerRadius="8" Margin="4">
                        <TextBlock x:Name="Pin2" Text="" FontSize="28" FontWeight="Bold" Foreground="White"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <Border Width="50" Height="60" Background="#252542" CornerRadius="8" Margin="4">
                        <TextBlock x:Name="Pin3" Text="" FontSize="28" FontWeight="Bold" Foreground="White"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <Border Width="50" Height="60" Background="#252542" CornerRadius="8" Margin="4">
                        <TextBlock x:Name="Pin4" Text="" FontSize="28" FontWeight="Bold" Foreground="White"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>

                <TextBlock x:Name="ErrorText" Text="" Foreground="#E94560" FontSize="12"
                           HorizontalAlignment="Center" Margin="0,16,0,0"/>

                <!-- Hidden TextBox for keyboard input -->
                <TextBox x:Name="PinInput" Width="0" Height="0" Opacity="0"
                         MaxLength="4" TextChanged="PinInput_TextChanged"
                         KeyDown="PinInput_KeyDown"/>
            </StackPanel>

            <!-- Numpad -->
            <Grid Grid.Row="2" Margin="40,10,40,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Row="0" Grid.Column="0" Content="1" Style="{StaticResource NumpadBtn}" Click="Number_Click"/>
                <Button Grid.Row="0" Grid.Column="1" Content="2" Style="{StaticResource NumpadBtn}" Click="Number_Click"/>
                <Button Grid.Row="0" Grid.Column="2" Content="3" Style="{StaticResource NumpadBtn}" Click="Number_Click"/>
                <Button Grid.Row="1" Grid.Column="0" Content="4" Style="{StaticResource NumpadBtn}" Click="Number_Click"/>
                <Button Grid.Row="1" Grid.Column="1" Content="5" Style="{StaticResource NumpadBtn}" Click="Number_Click"/>
                <Button Grid.Row="1" Grid.Column="2" Content="6" Style="{StaticResource NumpadBtn}" Click="Number_Click"/>
                <Button Grid.Row="2" Grid.Column="0" Content="7" Style="{StaticResource NumpadBtn}" Click="Number_Click"/>
                <Button Grid.Row="2" Grid.Column="1" Content="8" Style="{StaticResource NumpadBtn}" Click="Number_Click"/>
                <Button Grid.Row="2" Grid.Column="2" Content="9" Style="{StaticResource NumpadBtn}" Click="Number_Click"/>
                <Button Grid.Row="3" Grid.Column="0" Content="âŒ«" Style="{StaticResource NumpadBtn}" Click="Backspace_Click"/>
                <Button Grid.Row="3" Grid.Column="1" Content="0" Style="{StaticResource NumpadBtn}" Click="Number_Click"/>
                <Button Grid.Row="3" Grid.Column="2" Content="âœ“" Style="{StaticResource NumpadBtnAccent}" Click="Confirm_Click"/>
            </Grid>
        </Grid>
    </Border>

    <Window.Resources>
        <Style x:Key="NumpadBtn" TargetType="Button">
            <Setter Property="Background" Value="#252542"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3A3A6A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4A4A7A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NumpadBtnAccent" TargetType="Button">
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#059669"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
</Window>
