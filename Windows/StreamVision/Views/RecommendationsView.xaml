<UserControl x:Class="StreamVision.Views.RecommendationsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:StreamVision.Views"
             xmlns:models="clr-namespace:StreamVision.Models"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900"
             Background="{DynamicResource BackgroundBrush}">

    <UserControl.Resources>
        <!-- Recommendation Type to Icon Converter -->
        <local:RecommendationTypeToIconConverter x:Key="TypeToIconConverter"/>
        <local:RecommendationTypeToColorConverter x:Key="TypeToColorConverter"/>
        <local:ScoreToVisibilityConverter x:Key="ScoreToVisibilityConverter"/>
        <local:PercentageToWidthConverter x:Key="PercentageToWidthConverter"/>
        <local:MinutesToStringConverter x:Key="MinutesToStringConverter"/>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        </Style>

        <!-- Card Style -->
        <Style x:Key="RecommendationCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Width" Value="180"/>
            <Setter Property="Margin" Value="0,0,12,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="3" Opacity="0.3"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- Loading State -->
        <Grid x:Name="LoadingPanel" Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4"/>
                <TextBlock Text="Loading recommendations..." Margin="0,10,0,0"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Empty State -->
        <Grid x:Name="EmptyPanel" Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="&#xE943;" FontFamily="Segoe MDL2 Assets" FontSize="80"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Start Watching to Get Recommendations" FontSize="18"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           Margin="0,16,0,0" HorizontalAlignment="Center"/>
                <TextBlock Text="We'll learn your preferences as you watch" FontSize="14"
                           Foreground="{DynamicResource TextTertiaryBrush}"
                           Margin="0,8,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <ScrollViewer x:Name="ContentPanel" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="24">

                <!-- User Stats Card -->
                <Border Background="{DynamicResource AccentBrush}" CornerRadius="16"
                        Padding="20" Margin="0,0,0,24" Opacity="0.9">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="Your Viewing Stats" FontSize="18" FontWeight="SemiBold"
                                       Foreground="White"/>
                            <TextBlock Text="Based on your watch history" FontSize="12"
                                       Foreground="White" Opacity="0.8"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal"
                                    HorizontalAlignment="Right" VerticalAlignment="Center">
                            <!-- Watch Time -->
                            <StackPanel Margin="0,0,40,0" HorizontalAlignment="Center">
                                <TextBlock Text="&#xE916;" FontFamily="Segoe MDL2 Assets"
                                           FontSize="24" Foreground="White" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="WatchTimeText" Text="0h 0m" FontSize="16" FontWeight="Bold"
                                           Foreground="White" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                <TextBlock Text="Watch Time" FontSize="11" Foreground="White"
                                           Opacity="0.8" HorizontalAlignment="Center"/>
                            </StackPanel>

                            <!-- Channels Watched -->
                            <StackPanel Margin="0,0,40,0" HorizontalAlignment="Center">
                                <TextBlock Text="&#xE7F4;" FontFamily="Segoe MDL2 Assets"
                                           FontSize="24" Foreground="White" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="ChannelsText" Text="0" FontSize="16" FontWeight="Bold"
                                           Foreground="White" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                <TextBlock Text="Channels" FontSize="11" Foreground="White"
                                           Opacity="0.8" HorizontalAlignment="Center"/>
                            </StackPanel>

                            <!-- Favorite Category -->
                            <StackPanel Margin="0,0,40,0" HorizontalAlignment="Center">
                                <TextBlock Text="&#xEB51;" FontFamily="Segoe MDL2 Assets"
                                           FontSize="24" Foreground="White" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="FavoriteCategoryText" Text="None" FontSize="16" FontWeight="Bold"
                                           Foreground="White" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                <TextBlock Text="Top Category" FontSize="11" Foreground="White"
                                           Opacity="0.8" HorizontalAlignment="Center"/>
                            </StackPanel>

                            <!-- Sessions -->
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="&#xE768;" FontFamily="Segoe MDL2 Assets"
                                           FontSize="24" Foreground="White" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="SessionsText" Text="0" FontSize="16" FontWeight="Bold"
                                           Foreground="White" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                <TextBlock Text="Sessions" FontSize="11" Foreground="White"
                                           Opacity="0.8" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Recommendation Sections -->
                <ItemsControl x:Name="SectionsItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type models:RecommendationSection}">
                            <StackPanel Margin="0,0,0,24">
                                <!-- Section Header -->
                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                                        <TextBlock Text="{Binding Type, Converter={StaticResource TypeToIconConverter}}"
                                                   FontFamily="Segoe MDL2 Assets" FontSize="22"
                                                   Foreground="{Binding Type, Converter={StaticResource TypeToColorConverter}}"
                                                   VerticalAlignment="Center"/>
                                        <StackPanel Margin="10,0,0,0">
                                            <TextBlock Text="{Binding Title}" Style="{StaticResource SectionHeaderStyle}"/>
                                            <TextBlock Text="{Binding Subtitle}" FontSize="12"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <Button Grid.Column="2" Content="See All"
                                            Style="{DynamicResource LinkButtonStyle}"
                                            VerticalAlignment="Center"/>
                                </Grid>

                                <!-- Horizontal Items List -->
                                <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                              VerticalScrollBarVisibility="Disabled">
                                    <ItemsControl ItemsSource="{Binding Items}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="{x:Type models:RecommendationItem}">
                                                <Border Style="{StaticResource RecommendationCardStyle}"
                                                        MouseLeftButtonUp="OnRecommendationClick">
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="110"/>
                                                            <RowDefinition Height="*"/>
                                                        </Grid.RowDefinitions>

                                                        <!-- Thumbnail Area -->
                                                        <Grid Grid.Row="0">
                                                            <Border CornerRadius="12,12,0,0">
                                                                <Border.Background>
                                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                        <GradientStop Color="#2196F3" Offset="0"/>
                                                                        <GradientStop Color="#1976D2" Offset="1"/>
                                                                    </LinearGradientBrush>
                                                                </Border.Background>
                                                            </Border>

                                                            <!-- Channel Logo -->
                                                            <Image Source="{Binding LogoUrl}"
                                                                   Width="60" Height="60"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center">
                                                                <Image.Clip>
                                                                    <EllipseGeometry Center="30,30" RadiusX="30" RadiusY="30"/>
                                                                </Image.Clip>
                                                            </Image>

                                                            <!-- Fallback Icon -->
                                                            <TextBlock Text="&#xE7F4;" FontFamily="Segoe MDL2 Assets"
                                                                       FontSize="40" Foreground="White"
                                                                       HorizontalAlignment="Center"
                                                                       VerticalAlignment="Center"
                                                                       Visibility="{Binding LogoUrl, Converter={StaticResource NullToVisibilityConverter}}"/>

                                                            <!-- Progress Bar (Continue Watching) -->
                                                            <Grid VerticalAlignment="Bottom" Height="4">
                                                                <Rectangle Fill="Black" Opacity="0.3"/>
                                                                <Rectangle Fill="{DynamicResource AccentBrush}"
                                                                           HorizontalAlignment="Left"
                                                                           Width="{Binding WatchedPercentage, Converter={StaticResource PercentageToWidthConverter}, ConverterParameter=180}"/>
                                                            </Grid>

                                                            <!-- TOP Badge -->
                                                            <Border CornerRadius="4" Background="#FFD700"
                                                                    HorizontalAlignment="Right"
                                                                    VerticalAlignment="Top"
                                                                    Margin="0,8,8,0" Padding="6,2"
                                                                    Visibility="{Binding Score, Converter={StaticResource ScoreToVisibilityConverter}}">
                                                                <TextBlock Text="TOP" FontSize="10" FontWeight="Bold"
                                                                           Foreground="Black"/>
                                                            </Border>
                                                        </Grid>

                                                        <!-- Info Area -->
                                                        <StackPanel Grid.Row="1" Margin="12">
                                                            <TextBlock Text="{Binding ChannelName}"
                                                                       FontSize="14" FontWeight="SemiBold"
                                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                                       TextTrimming="CharacterEllipsis"/>
                                                            <TextBlock Text="{Binding Category}"
                                                                       FontSize="12"
                                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                                       Margin="0,2,0,0"/>
                                                            <TextBlock Text="{Binding Reason}"
                                                                       FontSize="11"
                                                                       Foreground="{DynamicResource AccentBrush}"
                                                                       Margin="0,4,0,0"
                                                                       TextTrimming="CharacterEllipsis"/>

                                                            <!-- Match Score -->
                                                            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                                                <ItemsControl ItemsSource="{Binding Score, Converter={StaticResource ScoreToDotsConverter}}">
                                                                    <ItemsControl.ItemsPanel>
                                                                        <ItemsPanelTemplate>
                                                                            <StackPanel Orientation="Horizontal"/>
                                                                        </ItemsPanelTemplate>
                                                                    </ItemsControl.ItemsPanel>
                                                                    <ItemsControl.ItemTemplate>
                                                                        <DataTemplate>
                                                                            <Ellipse Width="6" Height="6" Margin="0,0,3,0"
                                                                                     Fill="{Binding}"/>
                                                                        </DataTemplate>
                                                                    </ItemsControl.ItemTemplate>
                                                                </ItemsControl>
                                                                <TextBlock FontSize="10" Margin="4,0,0,0"
                                                                           Foreground="{DynamicResource TextTertiaryBrush}">
                                                                    <Run Text="{Binding Score, StringFormat='{}{0:P0}'}"/>
                                                                    <Run Text=" Match"/>
                                                                </TextBlock>
                                                            </StackPanel>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
