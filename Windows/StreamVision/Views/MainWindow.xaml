<Window x:Class="StreamVision.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:StreamVision"
        xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        Title="StreamVision"
        Height="950" Width="1700"
        MinHeight="750" MinWidth="1300"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        KeyDown="Window_KeyDown">

    <Window.Resources>
        <!-- Revolutionary Color Palette -->
        <Color x:Key="DeepSpace">#0A0A0F</Color>
        <Color x:Key="Cosmic">#12121A</Color>
        <Color x:Key="Nebula">#1A1A2E</Color>
        <Color x:Key="Stardust">#252542</Color>
        <Color x:Key="Aurora1">#667EEA</Color>
        <Color x:Key="Aurora2">#764BA2</Color>
        <Color x:Key="Plasma1">#F093FB</Color>
        <Color x:Key="Plasma2">#F5576C</Color>
        <Color x:Key="Neon1">#4FACFE</Color>
        <Color x:Key="Neon2">#00F2FE</Color>
        <Color x:Key="GlassWhite">#20FFFFFF</Color>
        <Color x:Key="GlassBorder">#30FFFFFF</Color>
        <Color x:Key="TextGlow">#FFFFFF</Color>
        <Color x:Key="TextMuted">#80FFFFFF</Color>

        <SolidColorBrush x:Key="DeepSpaceBrush" Color="{StaticResource DeepSpace}"/>
        <SolidColorBrush x:Key="GlassWhiteBrush" Color="{StaticResource GlassWhite}"/>
        <SolidColorBrush x:Key="GlassBorderBrush" Color="{StaticResource GlassBorder}"/>

        <!-- Glassmorphism Card Style -->
        <Style x:Key="GlassCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#15FFFFFF" Offset="0"/>
                        <GradientStop Color="#08FFFFFF" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="{StaticResource GlassBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#40000000" BlurRadius="30" ShadowDepth="0" Opacity="0.5"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Floating Action Button -->
        <Style x:Key="FloatingBtn" TargetType="Button">
            <Setter Property="Width" Value="56"/>
            <Setter Property="Height" Value="56"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse x:Name="glow" Fill="#40667EEA" Margin="-10">
                                <Ellipse.Effect>
                                    <BlurEffect Radius="20"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            <Ellipse x:Name="bg">
                                <Ellipse.Fill>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#667EEA" Offset="0"/>
                                        <GradientStop Color="#764BA2" Offset="1"/>
                                    </LinearGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="glow" Property="Fill" Value="#60667EEA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Ghost Glass Button -->
        <Style x:Key="GhostGlassBtn" TargetType="Button">
            <Setter Property="Background" Value="#15FFFFFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="28,14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#30FFFFFF"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="16" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#25FFFFFF"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#50FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Accent Button with Glow -->
        <Style x:Key="AccentGlowBtn" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="32,16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="glow" CornerRadius="16" Margin="-4" Opacity="0.6">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#667EEA" Offset="0"/>
                                        <GradientStop Color="#764BA2" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.Effect>
                                    <BlurEffect Radius="15"/>
                                </Border.Effect>
                            </Border>
                            <Border x:Name="main" CornerRadius="16" Padding="{TemplateBinding Padding}">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#667EEA" Offset="0"/>
                                        <GradientStop Color="#764BA2" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="glow" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Icon Button Minimal -->
        <Style x:Key="IconMinimal" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#80FFFFFF"/>
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="14">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#15FFFFFF"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Bento Card with 3D Effect -->
        <Style x:Key="BentoCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="28"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TransformGroup>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Children[0].ScaleX"
                                                 To="1.03" Duration="0:0:0.3">
                                    <DoubleAnimation.EasingFunction>
                                        <CubicEase EasingMode="EaseOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Children[0].ScaleY"
                                                 To="1.03" Duration="0:0:0.3">
                                    <DoubleAnimation.EasingFunction>
                                        <CubicEase EasingMode="EaseOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Children[3].Y"
                                                 To="-8" Duration="0:0:0.3">
                                    <DoubleAnimation.EasingFunction>
                                        <CubicEase EasingMode="EaseOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Children[0].ScaleX"
                                                 To="1" Duration="0:0:0.3"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Children[0].ScaleY"
                                                 To="1" Duration="0:0:0.3"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Children[3].Y"
                                                 To="0" Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern Search Box -->
        <Style x:Key="ModernSearch" TargetType="TextBox">
            <Setter Property="Background" Value="#12FFFFFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#20FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="20,14"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="18">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="ðŸ”" FontSize="16" Margin="16,0,0,0"
                                           VerticalAlignment="Center" Opacity="0.5"/>
                                <ScrollViewer x:Name="PART_ContentHost" Grid.Column="1"
                                              Margin="8,0,16,0" VerticalAlignment="Center"/>
                                <TextBlock x:Name="placeholder" Grid.Column="1" Text="Search anything..."
                                           Foreground="#50FFFFFF" Margin="12,0,0,0"
                                           VerticalAlignment="Center" Visibility="Collapsed"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="placeholder" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#667EEA"/>
                                <Setter TargetName="border" Property="Background" Value="#18FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main Container -->
    <Border CornerRadius="20">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0A0A0F" Offset="0"/>
                <GradientStop Color="#0F0F18" Offset="0.5"/>
                <GradientStop Color="#0A0A0F" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <!-- Animated Gradient Orbs Background -->
            <Canvas ClipToBounds="True">
                <!-- Orb 1 - Purple -->
                <Ellipse Width="600" Height="600" Canvas.Left="-100" Canvas.Top="-100">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#30764BA2" Offset="0"/>
                            <GradientStop Color="#00764BA2" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                    <Ellipse.Effect>
                        <BlurEffect Radius="100"/>
                    </Ellipse.Effect>
                    <Ellipse.RenderTransform>
                        <TranslateTransform x:Name="Orb1Transform"/>
                    </Ellipse.RenderTransform>
                    <Ellipse.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                    <DoubleAnimation Storyboard.TargetName="Orb1Transform"
                                                     Storyboard.TargetProperty="X"
                                                     From="0" To="200" Duration="0:0:15"/>
                                    <DoubleAnimation Storyboard.TargetName="Orb1Transform"
                                                     Storyboard.TargetProperty="Y"
                                                     From="0" To="100" Duration="0:0:20"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Ellipse.Triggers>
                </Ellipse>

                <!-- Orb 2 - Blue -->
                <Ellipse Width="500" Height="500" Canvas.Right="-50" Canvas.Top="200">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#25667EEA" Offset="0"/>
                            <GradientStop Color="#00667EEA" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                    <Ellipse.Effect>
                        <BlurEffect Radius="80"/>
                    </Ellipse.Effect>
                    <Ellipse.RenderTransform>
                        <TranslateTransform x:Name="Orb2Transform"/>
                    </Ellipse.RenderTransform>
                    <Ellipse.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                    <DoubleAnimation Storyboard.TargetName="Orb2Transform"
                                                     Storyboard.TargetProperty="X"
                                                     From="0" To="-150" Duration="0:0:18"/>
                                    <DoubleAnimation Storyboard.TargetName="Orb2Transform"
                                                     Storyboard.TargetProperty="Y"
                                                     From="0" To="150" Duration="0:0:12"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Ellipse.Triggers>
                </Ellipse>

                <!-- Orb 3 - Cyan -->
                <Ellipse Width="400" Height="400" Canvas.Left="400" Canvas.Bottom="-100">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#2000F2FE" Offset="0"/>
                            <GradientStop Color="#0000F2FE" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                    <Ellipse.Effect>
                        <BlurEffect Radius="60"/>
                    </Ellipse.Effect>
                </Ellipse>
            </Canvas>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Floating Header -->
                <Border Grid.Row="0" Margin="24,16,24,0" Style="{StaticResource GlassCard}"
                        MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                    <Grid Margin="24,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Logo -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <Border Width="44" Height="44" CornerRadius="12">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#667EEA" Offset="0"/>
                                        <GradientStop Color="#764BA2" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <TextBlock Text="â–¶" FontSize="18" Foreground="White"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Stream" FontSize="24" FontWeight="Bold"
                                       Foreground="White" Margin="14,0,0,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Vision" FontSize="24" FontWeight="Light"
                                       Foreground="#80FFFFFF" VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Search -->
                        <TextBox Grid.Column="1" Style="{StaticResource ModernSearch}"
                                 Width="400" HorizontalAlignment="Center"
                                 Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"/>

                        <!-- Actions -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                            <Button Style="{StaticResource IconMinimal}" ToolTip="Add Content" Click="AddPlaylist_Click">
                                <TextBlock Text="âž•" FontSize="18"/>
                            </Button>
                            <Button Style="{StaticResource IconMinimal}" ToolTip="Settings">
                                <TextBlock Text="âš™ï¸" FontSize="18"/>
                            </Button>
                        </StackPanel>

                        <!-- Window Controls -->
                        <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="16,0,0,0">
                            <Button Style="{StaticResource IconMinimal}" Width="40" Height="40" Click="Minimize_Click">
                                <Ellipse Width="12" Height="12" Fill="#FFBD2E"/>
                            </Button>
                            <Button Style="{StaticResource IconMinimal}" Width="40" Height="40" Click="Maximize_Click">
                                <Ellipse Width="12" Height="12" Fill="#28C940"/>
                            </Button>
                            <Button Style="{StaticResource IconMinimal}" Width="40" Height="40" Click="Close_Click">
                                <Ellipse Width="12" Height="12" Fill="#FF5F56"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Main Content - Bento Grid -->
                <ScrollViewer x:Name="MainScrollViewer" Grid.Row="1" VerticalScrollBarVisibility="Hidden" Margin="24,16,24,24">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Hero Section - Bento Style -->
                        <Grid Grid.Row="0" Height="420">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="380"/>
                            </Grid.ColumnDefinitions>

                            <!-- Main Featured Card -->
                            <Border Grid.Column="0" Style="{StaticResource BentoCard}" Margin="0,0,16,0"
                                    MouseLeftButtonUp="Channel_Click">
                                <Border.Tag>
                                    <Binding Path="CurrentChannel"/>
                                </Border.Tag>
                                <Grid>
                                    <Border CornerRadius="28">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#1A1A2E" Offset="0"/>
                                                <GradientStop Color="#16213E" Offset="0.5"/>
                                                <GradientStop Color="#0F3460" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                    </Border>

                                    <!-- Video Player Background - LibVLCSharp -->
                                    <Border CornerRadius="28" ClipToBounds="True">
                                        <vlc:VideoView x:Name="MainVideoView"/>
                                    </Border>

                                    <!-- Gradient Overlay -->
                                    <Border CornerRadius="28">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0.3" EndPoint="0,1">
                                                <GradientStop Color="#00000000" Offset="0"/>
                                                <GradientStop Color="#E0000000" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                    </Border>

                                    <!-- Content -->
                                    <Grid Margin="48">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Now Playing Badge -->
                                        <Border Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top"
                                                CornerRadius="20" Padding="16,8"
                                                Visibility="{Binding IsPlaying, Converter={x:Static local:Converters.BoolToVisibility}}">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                    <GradientStop Color="#667EEA" Offset="0"/>
                                                    <GradientStop Color="#764BA2" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                            <StackPanel Orientation="Horizontal">
                                                <Ellipse Width="8" Height="8" Fill="#FF5555" Margin="0,0,8,0"/>
                                                <TextBlock Text="LIVE NOW" FontSize="11" FontWeight="Bold" Foreground="White"/>
                                            </StackPanel>
                                        </Border>

                                        <!-- Info -->
                                        <StackPanel Grid.Row="1">
                                            <TextBlock Text="{Binding CurrentChannel.GroupTitle, FallbackValue='WELCOME'}"
                                                       FontSize="13" FontWeight="SemiBold" Foreground="#667EEA"
                                                       Margin="0,0,0,8"/>
                                            <TextBlock Text="{Binding CurrentChannel.Name, FallbackValue='Your Next-Gen Streaming Experience'}"
                                                       FontSize="42" FontWeight="Bold" Foreground="White"
                                                       TextWrapping="Wrap"/>
                                            <TextBlock Text="{Binding CurrentProgram.Description, FallbackValue='Discover a revolutionary way to stream. Add your playlists and experience content like never before.'}"
                                                       FontSize="15" Foreground="#90FFFFFF" Margin="0,16,0,0"
                                                       TextWrapping="Wrap" MaxWidth="500"/>

                                            <!-- Action Buttons -->
                                            <StackPanel Orientation="Horizontal" Margin="0,28,0,0">
                                                <Button Style="{StaticResource AccentGlowBtn}"
                                                        Command="{Binding PlayPauseCommand}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="â–¶" FontSize="16" Margin="0,0,12,0"/>
                                                        <TextBlock Text="Play Now" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </Button>
                                                <!-- EPG moved to HomeWindow -->
                                                <Button Style="{StaticResource GhostGlassBtn}" Margin="16,0,0,0"
                                                        IsEnabled="False">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="ðŸ“º" FontSize="14" Margin="0,0,10,0"/>
                                                        <TextBlock Text="TV Guide"/>
                                                    </StackPanel>
                                                </Button>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>

                            <!-- Side Cards Stack -->
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Quick Stats Card -->
                                <Border Grid.Row="0" Style="{StaticResource BentoCard}" Margin="0,0,0,16">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#15667EEA" Offset="0"/>
                                            <GradientStop Color="#10764BA2" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Grid Margin="28">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Text="ðŸ“Š Your Stats" FontSize="14" FontWeight="SemiBold" Foreground="#80FFFFFF"/>
                                        <StackPanel Grid.Row="1" VerticalAlignment="Center">
                                            <TextBlock FontSize="48" FontWeight="Bold" Foreground="White">
                                                <Run Text="{Binding FilteredChannels.Count, Mode=OneWay, FallbackValue='0'}"/>
                                            </TextBlock>
                                            <TextBlock Text="Channels Available" FontSize="14" Foreground="#60FFFFFF" Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!-- Categories Quick Access -->
                                <Border Grid.Row="1" Style="{StaticResource BentoCard}">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#15F093FB" Offset="0"/>
                                            <GradientStop Color="#10F5576C" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Grid Margin="28">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Text="ðŸŽ¯ Quick Access" FontSize="14" FontWeight="SemiBold" Foreground="#80FFFFFF"/>
                                        <StackPanel Grid.Row="1" VerticalAlignment="Center">
                                            <TextBlock FontSize="48" FontWeight="Bold" Foreground="White">
                                                <Run Text="{Binding Categories.Count, Mode=OneWay, FallbackValue='0'}"/>
                                            </TextBlock>
                                            <TextBlock Text="Categories" FontSize="14" Foreground="#60FFFFFF" Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Grid>

                        <!-- Section Title -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,40,0,20">
                            <Border Width="4" Height="24" CornerRadius="2">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#667EEA" Offset="0"/>
                                        <GradientStop Color="#764BA2" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                            <TextBlock Text="All Channels" FontSize="22" FontWeight="Bold"
                                       Foreground="White" Margin="16,0,0,0"/>
                            <TextBlock Text="{Binding FilteredChannels.Count, Mode=OneWay, StringFormat=' â€¢ {0} available'}"
                                       FontSize="14" Foreground="#50FFFFFF" VerticalAlignment="Center" Margin="8,2,0,0"/>
                        </StackPanel>

                        <!-- Channel Grid - Bento Style -->
                        <ItemsControl Grid.Row="2" ItemsSource="{Binding FilteredChannels}"
                                      VirtualizingPanel.IsVirtualizing="True">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Width="280" Height="180" Style="{StaticResource BentoCard}"
                                            Margin="0,0,16,16" MouseLeftButtonUp="Channel_Click">
                                        <Border.Tag>
                                            <Binding/>
                                        </Border.Tag>
                                        <Grid>
                                            <!-- Gradient Background -->
                                            <Border CornerRadius="28">
                                                <Border.Background>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                        <GradientStop Color="#1E1E2E" Offset="0"/>
                                                        <GradientStop Color="#2D2D44" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                            </Border>

                                            <!-- Accent Glow -->
                                            <Ellipse Width="120" Height="120"
                                                     HorizontalAlignment="Right" VerticalAlignment="Top"
                                                     Margin="0,-30,-30,0">
                                                <Ellipse.Fill>
                                                    <RadialGradientBrush>
                                                        <GradientStop Color="#20667EEA" Offset="0"/>
                                                        <GradientStop Color="#00667EEA" Offset="1"/>
                                                    </RadialGradientBrush>
                                                </Ellipse.Fill>
                                            </Ellipse>

                                            <!-- Logo -->
                                            <Image Source="{Binding LogoUrl}" Width="64" Height="64"
                                                   HorizontalAlignment="Right" VerticalAlignment="Top"
                                                   Margin="0,24,24,0" Opacity="0.9"/>

                                            <!-- Content -->
                                            <StackPanel VerticalAlignment="Bottom" Margin="24">
                                                <TextBlock Text="{Binding GroupTitle}" FontSize="11"
                                                           FontWeight="SemiBold" Foreground="#667EEA"/>
                                                <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold"
                                                           Foreground="White" TextTrimming="CharacterEllipsis"
                                                           Margin="0,6,0,0"/>

                                                <!-- Play indicator -->
                                                <Border CornerRadius="12" Padding="12,6" Margin="0,12,0,0"
                                                        HorizontalAlignment="Left" Background="#15FFFFFF">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="â–¶" FontSize="10" Foreground="#667EEA"/>
                                                        <TextBlock Text=" Watch" FontSize="11" Foreground="#80FFFFFF"/>
                                                    </StackPanel>
                                                </Border>
                                            </StackPanel>

                                            <!-- Favorite Badge -->
                                            <Border CornerRadius="12" HorizontalAlignment="Left" VerticalAlignment="Top"
                                                    Margin="20,20,0,0" Padding="10,6"
                                                    Visibility="{Binding IsFavorite, Converter={x:Static local:Converters.BoolToVisibility}}">
                                                <Border.Background>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                        <GradientStop Color="#F093FB" Offset="0"/>
                                                        <GradientStop Color="#F5576C" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                                <TextBlock Text="â˜…" FontSize="10" Foreground="White"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </ScrollViewer>

                <!-- Floating Player Mini (when scrolled) -->
                <Border Grid.Row="1" Width="360" Height="220"
                        HorizontalAlignment="Right" VerticalAlignment="Bottom"
                        Margin="0,0,40,40" Style="{StaticResource GlassCard}"
                        Visibility="{Binding IsPlaying, Converter={x:Static local:Converters.BoolToVisibility}}"
                        x:Name="MiniPlayer">
                    <Grid>
                        <Border CornerRadius="24" ClipToBounds="True">
                            <vlc:VideoView x:Name="MiniVideoView"/>
                        </Border>
                        <Border CornerRadius="24">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                    <GradientStop Color="#00000000" Offset="0.5"/>
                                    <GradientStop Color="#90000000" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                        <StackPanel VerticalAlignment="Bottom" Margin="20">
                            <TextBlock Text="{Binding CurrentChannel.Name}" FontSize="14" FontWeight="Bold" Foreground="White"/>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <Button Style="{StaticResource IconMinimal}" Width="36" Height="36"
                                        Command="{Binding PlayPauseCommand}">
                                    <TextBlock Text="{Binding IsPlaying, Converter={x:Static local:Converters.BoolToPlayPause}}" FontSize="16"/>
                                </Button>
                                <Button Style="{StaticResource IconMinimal}" Width="36" Height="36"
                                        Command="{Binding NextChannelCommand}">
                                    <TextBlock Text="â­" FontSize="14"/>
                                </Button>
                                <Button Style="{StaticResource IconMinimal}" Width="36" Height="36"
                                        Command="{Binding ToggleMuteCommand}" Margin="8,0,0,0">
                                    <TextBlock Text="{Binding IsMuted, Converter={x:Static local:Converters.BoolToVolume}}" FontSize="14"/>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Fullscreen Player - LibVLCSharp -->
            <Grid x:Name="FullscreenPlayer" Visibility="Collapsed" Background="#0A0A0F">
                <vlc:VideoView x:Name="FullscreenVideoView"/>

                <Border VerticalAlignment="Bottom">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Color="#00000000" Offset="0"/>
                            <GradientStop Color="#DD000000" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <StackPanel Margin="60,60">
                        <TextBlock Text="{Binding CurrentChannel.Name}" FontSize="32" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="{Binding CurrentProgram.Title}" FontSize="16" Foreground="#80FFFFFF" Margin="0,8,0,24"/>
                        <StackPanel Orientation="Horizontal">
                            <Button Style="{StaticResource FloatingBtn}" Command="{Binding PreviousChannelCommand}">
                                <TextBlock Text="â®" FontSize="20" Foreground="White"/>
                            </Button>
                            <Button Style="{StaticResource FloatingBtn}" Command="{Binding PlayPauseCommand}" Margin="16,0">
                                <TextBlock Text="{Binding IsPlaying, Converter={x:Static local:Converters.BoolToPlayPause}}" FontSize="24" Foreground="White"/>
                            </Button>
                            <Button Style="{StaticResource FloatingBtn}" Command="{Binding NextChannelCommand}">
                                <TextBlock Text="â­" FontSize="20" Foreground="White"/>
                            </Button>
                            <Button Style="{StaticResource FloatingBtn}" Command="{Binding ToggleMuteCommand}" Margin="32,0,0,0">
                                <TextBlock Text="{Binding IsMuted, Converter={x:Static local:Converters.BoolToVolume}}" FontSize="20" Foreground="White"/>
                            </Button>
                            <Slider Value="{Binding Volume}" Minimum="0" Maximum="100" Width="150"
                                    VerticalAlignment="Center" Margin="16,0,0,0"/>
                            <Button Style="{StaticResource FloatingBtn}" Click="ExitFullscreen_Click" Margin="32,0,0,0">
                                <TextBlock Text="â›¶" FontSize="20" Foreground="White"/>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
