<Window x:Class="StreamVision.Views.ChannelSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SÃ©lectionner une chaÃ®ne"
        Height="500" Width="400"
        WindowStartupLocation="CenterOwner"
        Background="#1A1A2E"
        ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Search -->
        <Border Grid.Row="0" Background="#252542" Padding="16">
            <TextBox x:Name="SearchBox" Background="#1A1A2E" Foreground="White"
                     BorderBrush="#333" Padding="10,8" FontSize="14"
                     TextChanged="SearchBox_TextChanged">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TextBox">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="1" CornerRadius="8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="ðŸ”" Margin="10,0,8,0" VerticalAlignment="Center" Foreground="#666"/>
                                            <ScrollViewer x:Name="PART_ContentHost" Grid.Column="1" VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>
            </TextBox>
        </Border>

        <!-- Channel List -->
        <ListBox x:Name="ChannelList" Grid.Row="1" Background="Transparent"
                 BorderThickness="0" SelectionMode="Single"
                 MouseDoubleClick="Channel_DoubleClick">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Padding="12,10" BorderBrush="#333" BorderThickness="0,0,0,1" Cursor="Hand">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{Binding LogoUrl}" Width="40" Height="40" Margin="0,0,12,0"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="{Binding Name}" Foreground="White" FontWeight="SemiBold"
                                           TextTrimming="CharacterEllipsis" MaxWidth="280"/>
                                <TextBlock Text="{Binding GroupTitle}" Foreground="#888" FontSize="11" Margin="0,2,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin" Value="0"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border x:Name="Bd" Background="{TemplateBinding Background}">
                                    <ContentPresenter/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="#2A2A4A"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="#3A3A6A"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
    </Grid>
</Window>
