generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  username     String
  passwordHash String
  avatarUrl    String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  subscription Subscription?
  playlists    Playlist[]
  favorites    Favorite[]
  watchHistory WatchHistory[]
  preferences  UserPreferences?
  profiles     Profile[]
  sessions     Session[]
}

model Session {
  id           String   @id @default(cuid())
  userId       String
  refreshToken String   @unique
  deviceInfo   String?
  expiresAt    DateTime
  createdAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Profile {
  id        String  @id @default(cuid())
  userId    String
  name      String
  avatarUrl String?
  isKid     Boolean @default(false)
  pin       String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Subscription {
  id        String    @id @default(cuid())
  userId    String    @unique
  tier      String    @default("free")
  status    String    @default("active")
  expiresAt DateTime?
  stripeId  String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Playlist {
  id             String    @id @default(cuid())
  userId         String
  name           String
  type           String
  url            String?
  xtreamServer   String?
  xtreamUsername String?
  xtreamPassword String?
  epgUrl         String?
  isActive       Boolean   @default(true)
  lastSync       DateTime?
  channelCount   Int       @default(0)
  movieCount     Int       @default(0)
  seriesCount    Int       @default(0)
  createdAt      DateTime  @default(now())

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  channels Channel[]
  vodItems VodItem[]
}

model Channel {
  id          String  @id @default(cuid())
  playlistId  String
  name        String
  logoUrl     String?
  streamUrl   String
  groupTitle  String?
  epgId       String?
  number      Int?
  catchupDays Int?
  xtreamId    Int?

  playlist     Playlist       @relation(fields: [playlistId], references: [id], onDelete: Cascade)
  favorites    Favorite[]
  watchHistory WatchHistory[]
  epgPrograms  EpgProgram[]
}

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  channelId String?
  vodItemId String?
  createdAt DateTime @default(now())

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  channel Channel? @relation(fields: [channelId], references: [id], onDelete: Cascade)
  vodItem VodItem? @relation(fields: [vodItemId], references: [id], onDelete: Cascade)
}

model WatchHistory {
  id        String   @id @default(cuid())
  userId    String
  channelId String?
  vodItemId String?
  episodeId String?
  progress  Int      @default(0)
  duration  Int?
  watchedAt DateTime @default(now())

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  channel Channel? @relation(fields: [channelId], references: [id], onDelete: Cascade)
  vodItem VodItem? @relation(fields: [vodItemId], references: [id], onDelete: Cascade)
  episode Episode? @relation(fields: [episodeId], references: [id], onDelete: Cascade)
}

model UserPreferences {
  id                 String  @id @default(cuid())
  userId             String  @unique
  preferredLanguages String  @default("French")
  showMovies         Boolean @default(true)
  showSeries         Boolean @default(true)
  showLiveTV         Boolean @default(true)
  showAnime          Boolean @default(true)
  animePreferSubbed  Boolean @default(true)
  preferredGenres    String?
  preferredSports    String?
  autoplay           Boolean @default(true)
  defaultQuality     String  @default("auto")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VodItem {
  id           String  @id @default(cuid())
  playlistId   String
  type         String  // movie | series
  name         String
  posterUrl    String?
  backdropUrl  String?
  plot         String?
  genre        String?
  year         Int?
  rating       Float?
  duration     Int?
  streamUrl    String?
  xtreamId     Int?
  containerExt String?
  createdAt    DateTime @default(now())

  playlist     Playlist       @relation(fields: [playlistId], references: [id], onDelete: Cascade)
  episodes     Episode[]
  favorites    Favorite[]
  watchHistory WatchHistory[]
}

model Episode {
  id           String  @id @default(cuid())
  vodItemId    String
  seasonNum    Int
  episodeNum   Int
  name         String
  plot         String?
  streamUrl    String
  duration     Int?
  xtreamId     String?
  containerExt String?

  vodItem      VodItem        @relation(fields: [vodItemId], references: [id], onDelete: Cascade)
  watchHistory WatchHistory[]
}

model EpgProgram {
  id          String   @id @default(cuid())
  channelId   String
  title       String
  description String?
  startTime   DateTime
  endTime     DateTime
  category    String?
  iconUrl     String?

  channel Channel @relation(fields: [channelId], references: [id], onDelete: Cascade)

  @@index([channelId, startTime])
}
