# Database (Neon PostgreSQL)
DATABASE_URL="postgresql://user:password@host/database?sslmode=require"

# Authentication secrets (generate with: openssl rand -hex 32)
JWT_SECRET="your-jwt-secret-min-32-chars"
JWT_REFRESH_SECRET="your-refresh-secret-min-32-chars"

# Encryption for Xtream credentials (generate with: openssl rand -hex 32)
ENCRYPTION_SECRET="your-encryption-secret-min-32-chars"

# CORS (optional, set to your domain in production)
ALLOWED_ORIGIN="https://yourdomain.com"

# App URL
NEXT_PUBLIC_APP_URL="https://yourdomain.com"
